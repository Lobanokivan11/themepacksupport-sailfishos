main=/usr/share/harbour-themepacksupport

config_read_file() {
    (grep -E "^${2}=" -m 1 "${1}" 2>/dev/null || echo "VAR=__UNDEFINED__") | head -n 1 | cut -d '=' -f 2-;
}

config_get() {
    val="$(config_read_file $main/config.cfg "${1}")";
    printf -- "%s" "${val}";
}

config_write() {
     sed -i "s/^$1.*/$1=$2/g" $main/config.cfg
}
